FROM ubuntu:14.04

RUN  sudo apt-get update
RUN  sudo apt-get install -y nginx mongodb-server git curl
RUN  sudo -u root bash -c 'curl -sL https://deb.nodesource.com/setup | sudo bash -'
RUN  sudo apt-get install -y nodejs
RUN  sudo -u root bash -c 'curl -L https://npmjs.org/install.sh | sh'
RUN  sudo npm install -g bower
RUN  sudo npm install -g sails

